<Window x:Class="Countries.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Countries"
        mc:Ignorable="d"
        Title="COUNTRIES" Height="650" Width="1200" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="False" WindowState="Normal" Icon="./Resources/CountriesIcon.png">
    <Grid>
        <StackPanel Margin="50,50,718,69">
            <ListBox  x:Name="listBoxCountries" HorizontalAlignment="Left" VerticalAlignment="Top" Width="426" Height="479" SelectionChanged="listBoxCountries_SelectionChanged"/>
            <ProgressBar x:Name="ProgressBarReport" Height="19" ValueChanged="ProgressBarReport_ValueChanged"/>
        </StackPanel>
        <StackPanel Margin="563,81,148,169">
            <Label Content="Name:"/>
            <TextBlock x:Name="TxtBlockName" TextWrapping="Wrap" Text=""/>
            <Label Content="Capital:"/>
            <TextBlock x:Name="TxtBlockCapital" TextWrapping="Wrap" Text=""/>
            <Label Content="Region:"/>
            <TextBlock x:Name="TxtBlockRegion" TextWrapping="Wrap" Text=""/>
            <Label Content="SubRegion:"/>
            <TextBlock x:Name="TxtBlockSubRegion" TextWrapping="Wrap" Text=""/>
            <Label Content="Population:"/>

            <TextBlock x:Name="TxtBlockPopulation" TextWrapping="Wrap" Text=""/>
        </StackPanel>
        <StackPanel Margin="50,571,563,18">
            <Label x:Name="labelReport" Content="Report" Margin="0,0,366,0"/>
        </StackPanel>
    </Grid>

</Window>
